@{
    ViewData["Title"] = "Contact";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<address>
    Jason Watson<br />
    <a href="https://github.com/JPWatsonOrg/ContactPage">My Github for this application</a><br />
</address>

@model ContactPage.Models.ContactInfo
@using (Html.BeginForm("Save", "ContactDetails"))
{
    @Html.AntiForgeryToken()
    <address>
        <div class="input-group form-group-below">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter Name", @requried = "required" })
            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
        </div>

        <div class="input-group form-group-below">
            @Html.TextBoxFor(m => m.phoneNumber, new { @class = "form-control", @placeholder = "Enter Phone Number", @requried = "required" })
            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
        </div>

        <div class="input-group form-group-below">
            @Html.TextBoxFor(m => m.emailAddress, new { @class = "form-control", @placeholder = "Enter Email Address", @requried = "required" })
            <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
        </div>
    </address>
    <button type="submit">Save</button>
}